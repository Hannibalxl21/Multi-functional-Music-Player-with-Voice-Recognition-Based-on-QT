/*背景颜色*/
QWidget#widget_2
{
    background-color: rgb(255,122,158);
}
/*QTabWidget 的样式*/
QTabWidget::pane
{
	top:10px;
    border: none;  
}
/*个性推荐*/
QTabBar::tab
{ 
	background:white;
	border-bottom: 3px solid rgb(255,255,255);
	font-family:"微软雅黑";
	font-size:16px;
	padding-left:5px;
	padding-right:5px;
	min-width: 85px;
	min-height:30px;		
}

QTabBar::tab:selected
{
	border-bottom: 3px solid rgb(255,122,158);
	color: rgb(55,55,55);
	font-size:20px;
	font-weight: bold;
}
/*localmusic的样式*/
QLabel#localLabel
{
    font-size: 22px;
    font-weight: 550;
    border: transparent;
}

QLabel#numberlabel
{
    font-size: 16px;
    color: rgb(180,180,180);
    border: transparent;
}

QPushButton#selectButton
{
    color: #50a7ff;
    font-size: 16px;
    border: transparent;
}

QPushButton#selectButton:hover
{
    color: blue;
    font-size: 16px;
    border: transparent;
}

QPushButton#playallBtn
{
     background-color: #ffffff;
    border: 1px solid #dcdfe6;
    border-radius: 16px;
    font-size: 16px;
}

QPushButton#playallBtn:hover
{
     background-color: #ecf5ff;
    color: #409eff;
    border-radius: 16px;
    font-size: 16px;
}

QPushButton#matchMusicbtn
{
    background-color:blue;
    border: 1px solid #dcdcdc;
    color: black;
    border-radius: 16px;
    font-size: 16px;
}

QPushButton#matchMusicbtn:hover
{
   background-color: #ecf5ff;
    color: #409eff;
    border-radius: 16px;
}

QLineEdit#localSearch
{
    background-color: #f3f3f3;
    color: #dcdcdc;
    border: none;
    border-radius: 12px;
    padding-left: 5px;
}

/*Tab基本的设置*/
QTabBar#musicInfo_TabBar:tab
{
    background: white;
    border-bottom: 3px solid rgb(255,255,255);

    font-family: "微软雅黑";
    font-weight: 200;
    margin-left: 5px;
    margin-right: 5px;
    margin-top: 10px;

    font-size: 17px;
    min-height: 25px;
    min-width: 50px;
}

/*Tab选中时*/
QTabBar#musicInfo_TabBar:tab:selected
{
    border-bottom: 3px solid rgb(255,122,158);
	color: rgb(55,55,55);
	font-size:20px;
	font-weight: bold;
}




