QScrollBar::vertival
{
    background: white;
    min-width: 5px;
}

QScrollBar::handle:vertical
{
    border-radius: 3px;
    background-color: #f3f3f3;
}

QScrollBar::handle:vertical:hover
{

    border-radius: 3px;
    background-color: #dcdcdc;
}
QScrollBar::horizontal
{
    background: white;
    min-width: 5px;
}

QScrollBar::handle:horizontal
{
    border-radius: 3px;
    background-color: #f3f3f3;
}

QScrollBar::handle:horizontal:hover
{

    border-radius: 3px;
    background-color: #dcdcdc;
}

QScrollBar::add-line,QScrollBar::sub-line
{
    background:white;
}




QScrollArea#music_ScrollArea
{
    border-left: 0px solid rgb(255,255,255);
    border-right: 0px solid rgb(255,255,255);
    border-bottom: 0px solid rgb(255,255,255);
    border-top: 1px solid rgb(246,246,246);
}



QTableWidget#table_music
{
    border: 0px;
    color: rgb(55,55,55);
    background: rgb(255,255,255);
    alternate-background-color: rgb(249,249,249);
    selection-background-color: rgb(220,220,220);
    selection-color: black;

    border-left: 0px solid rgb(255,255,255);
    border-right: 0px solid rgb(255,255,255);
    border-bottom: 0px solid rgb(255,255,255);
    border-top: 0px solid rgb(249,249,249);

}

QHeaderView::section
{
    background: white;
    color: rgb(55,55,55);
    border-left: 0px solid rgb(255,255,255);
    border-right: 0px solid rgb(255,255,255);
    border-bottom: 1px solid rgb(246,246,246);
    border-top: 1px solid rgb(246,246,246);
    padding-left: 3px;
    padding-right: 10px;

    padding-top: 4px;
    padding-bottom: 4px;
}


QHeaderView#music_verticalHeader:section
{
    background: rgb(255,255,255);
    border-left: 0px solid rgb(255,255,255);
    border-right: 0px solid rgb(255,255,255);
    border-bottom: 0px solid rgb(255,255,255);
    border-top: 0px solid rgb(255,255,255);
    padding-left: 15px;
    padding-right: 10px;
    text-align: left;

    alternate-background-color: rgb(255,255,255);
    selection-background-color: rgb(220,220,220);
}

/*设置列表左上角第0行第0列的那个格子的边框线*/
QTableCornerButton::section
{
    background: white;
    border-left: 0px solid rgb(255,255,255);
    border-right: 0px solid rgb(255,255,255);
    border-bottom: 0px solid rgb(255,255,255);
    border-top: 0px solid rgb(255,255,255);
    padding-left: 15px;
    padding-right: 10px;
    padding-top: 4px;
    padding-bottom: 4px;
}

QMenu
{
    background-color: white;
}

QMenu::item
{
    background: white;
    /*padding: 5px 10px;*/     /*上下，左右内边距*/
    padding-left: 10px;
    padding-right: 10px;
    padding-top: 4px;
    padding-bottom: 4px;
    margin: 3px 3px;
    font-size: 13px;
}
QMenu::icon
{
    position: absolute;
    left: 10px;
}


QMenu::item:hover
{
    background-color: rgb(220,220,220);

    color: black;
}

QMenu::item:selected
{
    background-color: rgb(220,220,220);

    color: black;
}


QPushButton#default1Button
{
    background-color: white;
    text-align: left;
    height: 30px;
    border: transparent;
   
    margin: 3px 3px;
}

QPushButton#default1Button:checked,#default1Button:hover
{
   
}
